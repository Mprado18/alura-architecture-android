<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listaProdutos">

    <fragment
        android:id="@+id/listaProdutos"
        android:name="br.com.alura.aluraSport.ui.fragment.ListaProdutosFragment"
        android:label="Lista de produtos"
        tools:layout="@layout/lista_produtos" >
        <action
            android:id="@+id/action_listaProdutos_to_detalhesProduto"
            app:destination="@id/detalhesProduto"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/detalhesProduto"
        android:name="br.com.alura.aluraSport.ui.fragment.DetalhesProdutoFragment"
        android:label="Detalhes do produto"
        tools:layout="@layout/detalhes_produto" >
        <action
            android:id="@+id/action_detalhesProduto_to_pagamentoFragment"
            app:destination="@id/pagamentoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="produtoId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/pagamentoFragment"
        android:name="br.com.alura.aluraSport.ui.fragment.PagamentoFragment"
        android:label="Pagamento Fragment"
        tools:layout="@layout/pagamento">
        <action
            android:id="@+id/action_pagamentoFragment_to_listaProdutos"
            app:destination="@id/listaProdutos"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/nav_graph" />
        <argument
            android:name="produtoId"
            app:argType="long" />
    </fragment>

</navigation>